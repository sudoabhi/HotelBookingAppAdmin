<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/ddxr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/azo"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:text="ddxr Admin"
        android:textColor="#000"
        android:textSize="28sp"
        android:textStyle="bold" />




    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/azo"
        android:text="Add Company/Organisation Location *"
        android:textColor="#000"
        android:textSize="18sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv2"
        android:layout_below="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_club_location"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="#000"
                    android:lines="1"
                    android:hint="District"

                    android:padding="5dp"
                    android:imeOptions="actionNext"
                    android:layout_marginHorizontal="8dp" />

            </android.support.design.widget.TextInputLayout>



        </LinearLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cv3"
        android:layout_below="@id/cv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_club_location2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="#000"
                    android:lines="1"
                    android:hint="State"

                    android:padding="5dp"
                    android:imeOptions="actionNext"
                    android:layout_marginHorizontal="8dp" />

            </android.support.design.widget.TextInputLayout>



        </LinearLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_below="@+id/cv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_club_location_detail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="#000"
                    android:hint="Complete Address"
                    android:padding="5dp"
                    android:imeOptions="actionDone"
                    android:layout_marginHorizontal="8dp" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>



    <Button
        android:id="@+id/next_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/roundx"
        android:text="NEXT"
        android:textSize="20sp" />

</RelativeLayout>

