<?xml version="1.0" encoding="utf-8"?>

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
    android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#45d6d6d6"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:fontFamily="@font/azo"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="HotelLo"
                android:textColor="#000"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/azo"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="Report bug"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/azo"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="Let us know you better"
                android:textColor="#000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/editbox2"
                android:backgroundTint="#85d6d6d6"
                android:hint="Name*"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/editbox2"
                android:backgroundTint="#85d6d6d6"
                android:hint="E-mail*"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/editbox2"
                android:backgroundTint="#85d6d6d6"
                android:hint="Phone(+91)*"
                android:inputType="number"
                android:maxLength="10"
                android:padding="10dp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/editbox2"
                android:backgroundTint="#85d6d6d6"
                android:hint="Address*"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColor="#000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/azo"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="Tell us about the issue you discovered"
                android:textColor="#000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/editbox2"
                android:backgroundTint="#85d6d6d6"
                android:hint="Bug Name*"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="10"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/editbox2"
                android:backgroundTint="#85d6d6d6"
                android:gravity="start"
                android:hint="Bug Details*"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColor="#000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:gravity="center_vertical"
                android:background="#85d6d6d6"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/upload_ss"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:background="#fff"
                    android:foreground="?selectableItemBackground"
                    android:textSize="16sp"
                    android:text="Upload" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:text="Upload a screenshot" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ss_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:background="#85d6d6d6"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ss"
                    android:layout_width="90dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"

                    />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:visibility="visible"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <Button
                android:id="@+id/send_feedback"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="200dp"
                android:text="Send"
                android:foreground="?selectableItemBackground"
                android:textSize="16sp"
                android:textColor="#000"
                android:textAllCaps="false"
                android:background="#D6d6d6"/>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

