<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <TextView
        android:id="@+id/ddxr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/azo"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:text="ddxr Admin"
        android:textColor="#000"
        android:textSize="28sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ddxr"
        android:layout_marginTop="37dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/azo"
        android:text="Add a name *"
        android:textColor="#000"
        android:textSize="18sp" />



    <android.support.design.widget.TextInputLayout
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/ddxr">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_club_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#000"
            android:padding="5dp"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:layout_marginHorizontal="8dp" />

    </android.support.design.widget.TextInputLayout>



    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:layout_marginTop="37dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/azo"
        android:text="Add a bio *"
        android:textColor="#000"
        android:textSize="18sp" />



    <android.support.design.widget.TextInputLayout
        android:id="@+id/input2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/input">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_club_bio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#000"
            android:padding="5dp"
            android:imeOptions="actionNext"
            android:layout_marginHorizontal="8dp" />

    </android.support.design.widget.TextInputLayout>




    <!--    <EditText
                 android:layout_centerHorizontal="true"
                 android:id="@+id/et_user_name"
                 android:layout_gravity="center_horizontal"
                 android:layout_marginTop="100dp"
                 android:layout_width="200dp"
                 android:layout_height="40dp" />  -->

    <Button
        android:id="@+id/next_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/roundx"
        android:text="NEXT"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/azo"
        android:text="You won't be able make any changes once your profile is created."
        android:textColor="#000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input2"
        android:layout_marginTop="200dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/azo"
        android:text="Fill all the further details correctly."
        android:textColor="#000"
        android:textSize="12sp" />


</RelativeLayout>

