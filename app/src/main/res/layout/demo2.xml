<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"

    >

    <FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"




        android:background="#2000">



        <android.support.v7.widget.CardView

            android:layout_height="wrap_content"
            android:layout_width="match_parent"

            android:padding="7dp"
            android:elevation="20dp"
            card_view:cardUseCompatPadding="true"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="5dp"


            android:id="@+id/parent_card_view">
            <!-- android:visibility="invisible"-->


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">






                <LinearLayout android:layout_height="wrap_content"
                    android:layout_width="match_parent"

                    android:orientation="vertical"

                    >


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="8dp"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">


                            <RelativeLayout
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <de.hdodenhof.circleimageview.CircleImageView

                                    android:layout_width="35dp"
                                    android:scaleType="centerCrop"
                                    android:id="@+id/club_profile_image"


                                    android:layout_height="35dp"
                                    app:civ_border_color="#FF000000"
                                    app:civ_border_width="0dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_toRightOf="@id/club_profile_image"
                                    android:orientation="vertical"
                                    android:paddingLeft="10dp"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/club_name"
                                        android:textColor="#000"

                                        android:fontFamily="@font/azo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        />

                                    <TextView
                                        android:id="@+id/club_location"
                                        android:textColor="#000"
                                        android:text="College"
                                        android:textSize="12sp"
                                        android:layout_width="wrap_content"
                                        android:fontFamily="@font/azo"
                                        android:layout_height="wrap_content" />



                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_height="wrap_content">

                                    <!--<com.like.LikeButton

                                        app:icon_size="50dp"
                                        android:id="@+id/star_button"

                                        android:elevation="6dp"


                                        app:dots_primary_color="@color/colorAccent"
                                        app:dots_secondary_color="@color/colorPrimary"
                                        app:circle_start_color="@color/colorPrimary"
                                        app:anim_scale_factor="2.5"
                                        app:circle_end_color="@color/colorAccent"
                                        android:padding="10dp"

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">





                                    </com.like.LikeButton>-->

                                    <!-- android:background="@drawable/ic_bookmark_border_black_24dp"/>-->




                                    <ImageView
                                        android:id="@+id/options"
                                        android:padding="10dp"

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/ic_more_vert_black_24dp"/>



                                </LinearLayout>






                            </RelativeLayout>

                            <LinearLayout
                                android:background="#40E3E3E3"
                                android:layout_marginBottom="0dp"
                                android:layout_width="match_parent"
                                android:id="@+id/GetDetails"

                                android:orientation="horizontal"
                                android:layout_height="wrap_content">


                                <ImageView

                                    android:id="@+id/event_banner"

                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content" />




                                    <LinearLayout

                                        android:layout_marginTop="3dp"
                                        android:layout_marginBottom="5dp"
                                        android:id="@+id/text_layout"


                                        android:layout_width="match_parent"
                                        android:orientation="vertical"
                                        android:layout_marginRight="2dp"
                                        android:layout_gravity="center"
                                        android:gravity="center"

                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:text="Ross Meetup"
                                            android:id="@+id/event_name"
                                            android:textStyle="bold"
                                            android:textSize="18sp"
                                            android:fontFamily="@font/azo"
                                            android:textColor="#9000"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginBottom="3dp"
                                            android:layout_height="wrap_content" />


                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:orientation="horizontal"
                                            android:layout_marginBottom="6dp"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_height="wrap_content">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:padding="6dp"
                                                android:layout_marginRight="3dp"
                                                android:background="@drawable/ic_placeholder"/>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/azo"
                                                android:id="@+id/location"

                                                android:textColor="#000"
                                                android:text="Allahabad"/>



                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:orientation="horizontal"
                                            android:layout_marginBottom="6dp"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_height="wrap_content">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:padding="6dp"
                                                android:layout_marginRight="3dp"
                                                android:background="@drawable/ic_flag"/>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/azo"
                                                android:id="@+id/club_domain"
                                                android:textColor="#000"
                                                android:text="Management"/>



                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:orientation="horizontal"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_height="wrap_content">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:padding="6dp"
                                                android:layout_marginRight="3dp"
                                                android:background="@drawable/ic_rupee"/>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/azo"
                                                android:id="@+id/event_cost"
                                                android:textColor="#000"
                                                />



                                        </LinearLayout>





                                    </LinearLayout>





















                            </LinearLayout>


                            <RelativeLayout
                                android:id="@+id/views"
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">

                                <FrameLayout
                                    android:id="@+id/interested_photos"
                                    android:layout_alignParentLeft="true"
                                    android:layout_width="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_height="wrap_content">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="25dp"
                                        android:layout_marginLeft="5dp"
                                        android:id="@+id/interested_photo1"
                                        android:layout_gravity="center_vertical"
                                        android:layout_height="25dp" />

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/interested_photo2"
                                        android:layout_marginLeft="25dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="27dp"
                                        android:layout_height="27dp"
                                        app:civ_border_color="#fff"
                                        app:civ_border_width="1dp" />

                                </FrameLayout>

                                <TextView

                                    android:layout_toRightOf="@id/interested_photos"
                                    android:id="@+id/interested_count"
                                    android:text="35"
                                    android:layout_marginTop="7dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="5dp"



                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView

                                    android:layout_toRightOf="@id/interested_count"
                                    android:layout_marginTop="7dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginRight="5dp"
                                    android:id="@+id/interested_textview"

                                    android:text=" people interested"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <!--<View

                                    android:layout_height="30dp"
                                    android:background="#E3E3E3"
                                    android:id="@+id/view1"
                                    android:layout_toLeftOf="@id/like_button"
                                    android:layout_width="1dp">

                                </View>-->

                                <!--<TextView

                                    android:clickable="true"
                                    android:text="DISCUSS"
                                    android:id="@+id/discuss"
                                    android:textColor="@color/mainColor"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:layout_marginTop="7dp"
                                    android:layout_marginBottom="3dp"
                                    android:fontFamily="@font/azo"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="0dp"
                                    android:background="?selectableItemBackground"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_toLeftOf="@id/like_button"
                                    android:layout_height="wrap_content" />-->

                                <ImageView
                                    android:background="@drawable/discuss"
                                    android:layout_marginTop="7dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:paddingTop="5dp"
                                    android:id="@+id/discuss"
                                    android:paddingBottom="5dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:layout_width="25dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_height="25dp" />







                            </RelativeLayout>













                        </LinearLayout>





                    </android.support.v7.widget.CardView>



                </LinearLayout>





















            </FrameLayout>






        </android.support.v7.widget.CardView>

