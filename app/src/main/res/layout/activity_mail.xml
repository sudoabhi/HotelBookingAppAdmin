<?xml version="1.0" encoding="utf-8"?>



<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:fillViewport="true"
    android:fitsSystemWindows="true">




<RelativeLayout

    android:id="@+id/outer"
    android:background="@null"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <RelativeLayout
        android:id="@+id/inner1"
        android:minHeight="350dp"
        android:background="#df6ca1c8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




                <Button
                    android:id="@+id/cross_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@null"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:drawableTint="#fff"
                    android:drawableStart="@drawable/ic_clear" />

                <TextView
                    android:id="@+id/welcometv"
                    android:layout_below="@+id/cross_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Welcome"
                    android:textSize="30sp"
                    android:fontFamily="@font/azo"
                    android:layout_margin="6dp"
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/txtlogin"
                    android:layout_below="@+id/welcometv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Sign in to your account"
                    android:textSize="20sp"
                    android:layout_margin="6dp"
                    android:textColor="#fff"/>


                <ProgressBar
                    android:layout_below="@+id/txtlogin"
                    android:id="@+id/my_progressBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:indeterminateTint="#FFF" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input"
                    android:layout_below="@+id/my_progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="10dp"
                    app:hintTextAppearance="@style/HintText"
                    android:textColorHint="#fff"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:drawableEnd="@drawable/ic_person_black_24dp"
                        android:drawableTint="#fff"
                        android:foreground="@drawable/editbox"
                        android:background="@android:color/transparent"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:minLines="1"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:paddingStart="10dp"
                        android:hint="Email"
                        android:textColor="#ffffff"
                        android:textColorHint="#fff"
                        />

                </android.support.design.widget.TextInputLayout>





                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input2"
                    android:layout_below="@+id/input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="15dp"
                    app:hintTextAppearance="@style/HintText"
                    android:textColorHint="#fff">


                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_password"
                        android:foreground="@drawable/editbox"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textColor="#ffffff"
                        android:inputType="textPassword"
                        android:minLines="1"
                        android:maxLines="1"
                        android:textColorHint="#fff"
                        android:paddingStart="10dp"
                        android:hint="Password"
                        android:drawableEnd="@drawable/ic_lock_black_24dp"
                        android:drawableTint="#fff"
                        android:padding="10dp"
                        android:imeOptions="actionDone"
                        />

                </android.support.design.widget.TextInputLayout>



    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/inner1"
        android:id="@+id/inner2"
        android:minHeight="350dp"
        android:background="#6ca1c8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



            <Button
                android:id="@+id/btn_login"
                android:layout_marginTop="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round2"
                android:foreground="?selectableItemBackgroundBorderless"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Log in"
                android:textSize="20sp"
                android:textColor="@color/disable_button_text"/>




        <TextView
            android:id="@+id/textresetpassword"
            android:layout_below="@+id/btn_login"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:padding="4dp"
            android:foreground="?selectableItemBackground"
            android:layout_marginTop="10dp"
            android:text="Forgot Your Password?"
            android:clickable="true"
            android:focusable="true"/>



        <Button
            android:id="@+id/btn_register"
            android:layout_below="@+id/textresetpassword"
            android:foreground="?selectableItemBackgroundBorderless"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="40dp"
            android:text="Don't have an account? Create One"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="17sp"/>



    </RelativeLayout>


</RelativeLayout>


</ScrollView>



