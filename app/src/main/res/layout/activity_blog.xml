<?xml version="1.0" encoding="utf-8"?>






<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="#fff"
        app:title="Comments"
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize">


    </android.support.v7.widget.Toolbar>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="19sp"

            android:layout_gravity="center"
            android:id="@+id/no_topics"
            android:visibility="invisible"

            android:text="Topic not found. ðŸ˜´"
            android:layout_height="wrap_content" />

        <RelativeLayout

            android:id="@+id/parent_layout"
            android:visibility="visible"


            android:layout_height="wrap_content"
            tools:context="com.example.hotelloadmin.ddxr.UserFragments.BlogActivity"
            android:layout_width="match_parent">



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >





                <android.support.v4.widget.NestedScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:fillViewport="true">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                            android:id="@+id/cv"
                            android:layout_width="match_parent"
                            app:cardBackgroundColor="#fff"
                            android:layout_height="wrap_content">

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    >

                                    <TextView
                                        android:layout_alignParentLeft="true"
                                        android:layout_marginLeft="10dp"
                                        android:layout_width="wrap_content"
                                        android:id="@+id/edited"
                                        android:visibility="gone"
                                        android:text="Edited"
                                        android:fontFamily="@font/azo"
                                        android:background="@drawable/chat_sdk_login_anonymously_button_selector"
                                        android:layout_height="wrap_content" />

                                    <TextView
                                        android:layout_alignParentRight="true"
                                        android:id="@+id/timeX"
                                        android:layout_marginRight="15dp"
                                        android:fontFamily="@font/azo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        >


                                    </TextView>





                                </RelativeLayout>


                                <LinearLayout
                                    android:id="@+id/views"
                                    android:padding="6dp"

                                    android:layout_width="match_parent"

                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">


                                    <ImageView

                                        android:id="@+id/blog_image"
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:fontFamily="@font/azo"
                                        android:breakStrategy="simple"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="15dp"
                                        android:id="@+id/blog_text"
                                        android:autoLink="web"
                                        android:textColor="#000"
                                        android:textSize="16sp"
                                        android:text="dndsdklnslkdnslkdnslkndslkndlkndlkn"
                                        android:layout_height="wrap_content" />



                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/comment_section"
                                    android:layout_marginBottom="5dp"
                                    android:visibility="gone"
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:background="@drawable/ic_black_bubble_speech"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                    <TextView
                                        android:id="@+id/comment_count"

                                        android:layout_marginTop="-5dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />


                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">


                                    <LinearLayout
                                        android:layout_marginLeft="5dp"
                                        android:paddingTop="5dp"
                                        android:layout_alignParentLeft="true"
                                        android:id="@+id/author_intro"
                                        android:paddingBottom="5dp"
                                        android:paddingRight="10dp"
                                        android:paddingLeft="10dp"
                                        android:background="@drawable/chat_sdk_login_anonymously_button_selector"

                                        android:layout_width="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content">


                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:id="@+id/profile_image"
                                            android:layout_width="42dp"
                                            android:layout_height="42dp"
                                            android:layout_marginBottom="5dp"
                                            android:layout_marginRight="5dp"

                                            android:layout_marginTop="5dp"

                                            app:civ_border_color="#FF000000"
                                            app:civ_border_width="0.5dp" />

                                        <LinearLayout
                                            android:id="@+id/author_intro1"
                                            android:layout_width="wrap_content"
                                            android:orientation="vertical"
                                            android:layout_marginTop="8dp"
                                            android:layout_marginLeft="5dp"

                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/azo"
                                                android:id="@+id/user_name"
                                                android:textColor="#000"
                                                android:textStyle="bold"
                                                android:textSize="14sp"
                                                android:layout_gravity="center_vertical"
                                                />



                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textSize="11sp"
                                                android:textColor="#000F55"
                                                android:layout_gravity="center_horizontal"
                                                android:id="@+id/skill_location"

                                                android:fontFamily="@font/azo"/>

                                        </LinearLayout>




                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_alignParentRight="true"
                                        android:layout_width="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginLeft="5dp"
                                        android:paddingTop="7dp"
                                        android:id="@+id/author_likes"
                                        android:paddingBottom="5dp"
                                        android:paddingRight="10dp"
                                        android:paddingLeft="10dp"
                                        android:layout_height="wrap_content">

                                        <RelativeLayout

                                            android:layout_width="wrap_content"
                                            android:layout_marginRight="5dp"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/like_button_bg"

                                            >

                                            <TextView
                                                android:id="@+id/like_thumb"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"

                                                android:textColor="#000"
                                                android:layout_centerHorizontal="true"
                                                android:drawableLeft="@drawable/ic_like_thumb"
                                                android:drawablePadding="5dp"
                                                android:padding="10dp"
                                                android:gravity="center"
                                                android:textSize="16sp"/>

                                        </RelativeLayout>
                                        <RelativeLayout

                                            android:layout_width="wrap_content"
                                            android:layout_marginRight="5dp"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/like_button_bg"

                                            >

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/dislike_thumb"
                                                android:text="2"

                                                android:textColor="#000"
                                                android:layout_centerHorizontal="true"
                                                android:drawableLeft="@drawable/ic_dislike_thumb"
                                                android:drawablePadding="5dp"
                                                android:padding="10dp"
                                                android:gravity="center"
                                                android:textSize="16sp"/>

                                        </RelativeLayout>
                                    </LinearLayout>




                                </RelativeLayout>


                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">


                                    <View
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="5dp"
                                        android:layout_width="match_parent"
                                        android:background="#4000"
                                        android:layout_height="0.5dp">


                                    </View>

                                    <ProgressBar
                                        android:indeterminateOnly="true"
                                        android:layout_marginTop="3dp"
                                        android:layout_marginBottom="5dp"
                                        android:layout_width="match_parent"
                                        android:visibility="gone"
                                        android:id="@+id/progress_edit_delete"

                                        android:layout_height="wrap_content"
                                        style="?android:attr/progressBarStyleHorizontal"/>


                                </FrameLayout>






                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <de.hdodenhof.circleimageview.CircleImageView

                                        android:layout_width="32dp"
                                        android:background="#ffff"

                                        android:id="@+id/p1"
                                        android:layout_alignParentLeft="true"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginBottom="5dp"

                                        android:visibility="gone"
                                        android:layout_height="32dp" />

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="32dp"
                                        android:background="#ffff"

                                        android:id="@+id/p2"
                                        android:visibility="gone"
                                        android:layout_toRightOf="@id/p1"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:layout_height="32dp" />
                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="32dp"
                                        android:id="@+id/p3"
                                        android:visibility="gone"
                                        android:background="#ffff"


                                        android:layout_toRightOf="@id/p2"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:layout_height="32dp" />
                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="32dp"
                                        android:id="@+id/p4"
                                        android:visibility="gone"
                                        android:background="#ffff"


                                        android:layout_toRightOf="@id/p3"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:layout_height="32dp" />
                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="32dp"
                                        android:id="@+id/p5"
                                        android:visibility="gone"
                                        android:background="#ffff"


                                        android:layout_toRightOf="@id/p4"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:layout_height="32dp" />

                                    <!--   <de.hdodenhof.circleimageview.CircleImageView
                                           android:layout_width="32dp"
                                           android:id="@+id/p6"
                                           android:background="@drawable/add_photo3"
                                           app:civ_border_color="#FF000000"
                                           app:civ_border_width="0.5dp"
                                           android:layout_toRightOf="@id/p5"
                                           android:layout_marginLeft="5dp"
                                           android:layout_marginRight="5dp"
                                           android:layout_marginBottom="5dp"
                                           android:layout_height="32dp" />-->
                                    <TextView
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:id="@+id/participant_count"

                                        android:layout_width="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:text="13 Participants"
                                        android:layout_height="wrap_content" />
                                </RelativeLayout>



                            </LinearLayout>


                        </android.support.v7.widget.CardView>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:background="#10563C5C"

                            android:layout_height="wrap_content">

                            <ProgressBar
                                android:elevation="12dp"
                                android:id="@+id/progress_bar"
                                android:layout_marginTop="80dp"
                                android:layout_gravity="center_horizontal"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="?android:attr/progressBarStyle"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:id="@+id/no_comments_tv"
                                android:visibility="invisible"
                                android:layout_marginTop="80dp"
                                android:orientation="vertical"
                                android:layout_height="350dp">

                                <TextView

                                    android:layout_gravity="center_horizontal"
                                    android:visibility="visible"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:text="No comments yet."/>

                                <TextView

                                    android:layout_gravity="center_horizontal"
                                    android:visibility="visible"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:text="Be the first! ðŸ’ª"/>

                            </LinearLayout>



                            <android.support.v7.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:id="@+id/my_recycler_view"
                                android:layout_marginBottom="64dp"
                                android:layout_height="wrap_content">



                            </android.support.v7.widget.RecyclerView>


                        </FrameLayout>



                    </LinearLayout>







                </android.support.v4.widget.NestedScrollView>



            </LinearLayout>

            <RelativeLayout

                android:id="@+id/reply_identify_LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"


                android:padding="10dp"

                app:layout_constraintBottom_toTopOf="@id/layout_chatbox"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"

                android:background="#E3E3E3"

                android:layout_above="@id/layout_chatbox">
                <!--app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"-->

                <ImageView
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:id="@+id/quote"
                    android:background="@drawable/ic_quote"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"

                    android:layout_height="wrap_content" />

                <LinearLayout

                    android:layout_width="wrap_content"

                    android:layout_toRightOf="@id/quote"
                    android:orientation="vertical"

                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/reply_identify_RepliersName"
                        android:text="Ashutosh"
                        android:textColor="#000000"
                        android:fontFamily="@font/azo"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView

                        android:layout_marginRight="35dp"
                        android:fontFamily="@font/azo"
                        android:id="@+id/reply_identify_RepliersText"
                        android:layout_width="wrap_content"
                        android:maxLines="1"
                        android:text="sjncnscnslncslkncskncsnlknslkcslnsncslkncslkncslnclksnlksnclksnclknslcknslkcnslkcnslcnslkclksncncsklnmmmmmmmmmmm"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <!--<Button
                    android:layout_width="0dp"
                    android:layout_weight="3"

                    android:drawableStart="@drawable/ic_cancel_black_24dp"
                    android:layout_height="wrap_content" />
        -->
                <ImageView
                    android:layout_alignParentRight="true"
                    android:padding="3dp"
                    android:layout_margin="5dp"
                    android:id="@+id/cancel_reply"
                    android:background="@drawable/ic_cancel_black_24dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />





            </RelativeLayout>





            <LinearLayout
                android:id="@+id/layout_chatbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="48dp"
                android:background="#ffffff"
                android:layout_alignParentBottom="true">
                <!-- app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintLeft_toLeftOf="parent"-->

                <EditText
                    android:id="@+id/edittext_chatbox"
                    android:hint="Write a comment"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:maxLines="6"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:elevation="12dp"
                        android:padding="5dp"
                        android:id="@+id/progress_bar2"

                        android:gravity="center"
                        android:visibility="invisible"
                        android:layout_gravity="bottom"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        style="?android:attr/progressBarStyle"/>

                    <Button
                        android:id="@+id/button_chatbox_send"
                        android:text="SEND"
                        android:textSize="14dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_width="64dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:layout_gravity="bottom" />


                </FrameLayout>


                <!--  <Button
                      android:id="@+id/button_chatbox_send"
                      android:text="SEND"
                      android:textSize="14dp"
                      android:background="?attr/selectableItemBackground"
                      android:clickable="true"
                      android:layout_width="64dp"
                      android:layout_height="48dp"
                      android:gravity="center"
                      android:layout_gravity="bottom" />-->



            </LinearLayout>

        </RelativeLayout>


    </FrameLayout>



</LinearLayout>









