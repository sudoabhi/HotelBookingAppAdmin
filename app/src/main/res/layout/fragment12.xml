<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">



    <TextView
        android:id="@+id/ddxr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/azo"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:text="HotelLo Admin"
        android:textColor="#000"
        android:textSize="28sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ddxr"
        android:layout_marginTop="37dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/azo"
        android:text="Add a Hotel name *"
        android:textColor="#000"
        android:textSize="18sp" />



    <android.support.design.widget.TextInputLayout
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/ddxr">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_club_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#000"
            android:padding="5dp"
            android:inputType="textCapWords"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

    </android.support.design.widget.TextInputLayout>



    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:layout_marginTop="37dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/azo"
        android:text="Add a bio *"
        android:textColor="#000"
        android:textSize="18sp" />



    <android.support.design.widget.TextInputLayout
        android:id="@+id/input2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/input">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_club_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:foreground="?selectableItemBackground"
            android:background="@drawable/editbox2"
            android:minLines="3"
            android:padding="10dp"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:imeOptions="actionNext"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

    </android.support.design.widget.TextInputLayout>




    <!--    <EditText
                 android:layout_centerHorizontal="true"
                 android:id="@+id/et_user_name"
                 android:layout_gravity="center_horizontal"
                 android:layout_marginTop="100dp"
                 android:layout_width="200dp"
                 android:layout_height="40dp" />  -->

    <Button
        android:id="@+id/next_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/input2"
        android:layout_marginTop="180dp"
        android:backgroundTint="@color/secondGrey"
        android:foreground="?selectableItemBackground"
        android:background="@drawable/round"
        android:text="NEXT"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/next_viewpager"
        android:fontFamily="@font/azo"
        android:text="You won't be able make any changes once your profile is created."
        android:textColor="#000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/azo"
        android:text="Fill all the further details correctly."
        android:textColor="#000"
        android:textSize="12sp" />

            <View
                android:id="@+id/v"
                android:layout_below="@+id/textView3"

                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@null"
                />


            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:indeterminate="true"
                android:indeterminateTint="#000"
                android:layout_height="wrap_content" />

</RelativeLayout>
    </FrameLayout>

    </android.support.v4.widget.NestedScrollView>