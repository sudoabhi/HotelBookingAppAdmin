<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#45d6d6d6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#fff"
        android:elevation="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cross_button"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@null"
            android:drawableStart="@drawable/ic_clear"
            android:drawableTint="#000"
            android:gravity="start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="22sp"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            android:text="About Us" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/lay1">

        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/hackicon"
            android:layout_gravity="center_horizontal"
            app:civ_border_color="#80000000"
            app:civ_border_width="3dp"
            android:elevation="8dp"
            />

        <TextView
            android:id="@+id/ddxr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:fontFamily="@font/azo"
            android:text="hotello.in"
            android:textColor="#000"
            android:textSize="35sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:fontFamily="@font/azo"
            android:text="Hotel Admin app for Hoteliers"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/azo"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="v1.0"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <View
            android:background="#98000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="50dp"/>

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tnc"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/azo"
                android:padding="10dp"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/tnc"
                android:textColor="#000"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:tint="#000"
                app:srcCompat="@drawable/ic_next_arrow" />


        </LinearLayout>

        <View
            android:background="#95000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            />

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/privacy"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/azo"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:text="@string/privacy"
                android:textColor="#000"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:tint="#000"
                app:srcCompat="@drawable/ic_next_arrow" />


        </LinearLayout>

        <View
            android:background="#95000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            />

        <View
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Made with love"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="by"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abhishek Kumar Singh"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>