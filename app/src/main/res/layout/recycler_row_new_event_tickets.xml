<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="#fff"
    android:layout_margin="10dp"
    >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/eventinput1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="0dp"
            android:clickable="false"
            android:focusable="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ticket_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:clickable="false"
                android:focusable="false"
                android:hint="Room Type"
                android:maxLines="1"
                android:paddingBottom="15dp"
                android:textColor="#000"
                android:textColorHighlight="#70000000"
                android:textColorHint="#70000000"
                android:textSize="18sp" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/eventinput2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="0dp"
        android:clickable="false"
        android:focusable="false">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/ticket_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:clickable="false"
            android:focusable="false"
            android:hint="Room Name"
            android:maxLines="1"
            android:paddingBottom="15dp"
            android:textColor="#000"
            android:textColorHighlight="#70000000"
            android:textColorHint="#70000000"
            android:textSize="18sp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/eventinput3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="0dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/ticket_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:hint="Room Category"
            android:clickable="false"
            android:focusable="false"
            android:maxLines="1"
            android:paddingBottom="15dp"
            android:textColor="#000"
            android:textColorHighlight="#70000000"
            android:textColorHint="#70000000"
            android:textSize="18sp" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/eventinput4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="0dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/ticket_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:hint="Room Description"
            android:clickable="false"
            android:focusable="false"
            android:lines="10"
            android:minLines="1"
            android:paddingBottom="15dp"
            android:textColor="#000"
            android:textColorHighlight="#70000000"
            android:textColorHint="#70000000"
            android:textSize="18sp" />

    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/eventinput5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="0dp"
            android:clickable="false"
            android:focusable="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/fees_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:clickable="false"
                android:focusable="false"
                android:hint="Payment Setting"
                android:maxLines="1"
                android:paddingBottom="15dp"
                android:textColor="#000"
                android:textColorHighlight="#70000000"
                android:textColorHint="#70000000"
                android:textSize="18sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/eventinput6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="0dp"
            android:clickable="false"
            android:focusable="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ticket_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:clickable="false"
                android:focusable="false"
                android:hint="Room Price(in â‚¹)"
                android:maxLines="1"
                android:paddingBottom="15dp"
                android:textColor="#000"
                android:textColorHighlight="#70000000"
                android:textColorHint="#70000000"
                android:textSize="18sp" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


    <Button
        android:id="@+id/remove_tick_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:foreground="?selectableItemBackground"
        android:paddingHorizontal="10dp"
        android:text="Remove This Room"
        android:textColor="#95000000" />



</LinearLayout>

</android.support.v7.widget.CardView>